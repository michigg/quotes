{% block content %}
    <div class="container">
        <div class="row text-dark my-2">
            <div class="col-9 p-0">
                <div class="mr-1 bg-white p-3 h-100">
                    <h2 class="mb-3">Neues Zitat hinzufügen</h2>
                    <form method="POST" action="{% url 'register_quote' %}">
                        {% csrf_token %}
                        {{ statement_formset.management_form }}
                        {% for form in statement_formset %}
                            <div class="ml-0 mt-1 container conversation-particle">
                                <div class="form-group row mb-0">
                                    <select class="custom-select col-3" name="form-0-author" id="id_form-0-author" required>
                                        <option value="" selected>---------</option>
                                        {% for author in authors %}
                                            <option value="{{ author.id }}">{{ author.name }}</option>
                                        {% endfor %}
                                    </select>
                                    <input class="form-control col-8" type="text" name="form-0-text" maxlength="1024"
                                           id="id_form-0-text"
                                           required/>

                                    <input type="hidden" name="form-0-id" id="id_form-0-id" class=""/>
                                    <button title="Weiteren Autor hinzufügen"
                                            class="btn btn-success btn-block col-1 add-form-row">+
                                    </button>
                                </div>
                            </div>
                        {% endfor %}
                        <div class="container mt-1">
                            <div class="row">
                                <input class="col-3" type="date" name="timestamp" value="{{ today_date|date:'Y-m-d' }}" required id="id_timestamp">
                                <input class="btn btn-outline-primary btn-block col-9 mt-0" type="submit" value="Save"/>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-3 p-0">
                <div class="ml-1 bg-white p-3 h-100">
                    <h2 class="mb-3">Neuen Autor hinzufügen</h2>
                    <form method="POST" action="{% url 'register_author' %}">
                        {% csrf_token %}
                        <input type="text" name="name" maxlength="32" required="" id="id_name" class="col-12 mb-1">
                        <input class="btn btn-outline-primary btn-block align-items-end" type="submit" value="Save"/>
                    </form>
                </div>
            </div>
        </div>
        <div class="row text-dark mb-2">
            <div class="col-12 bg-white p-3">
                <div class="row mb-2">
                    <h2 class="col-8">Zitate</h2>
                    <p class="col-4 mb-0 quote-search">
                        Suche: <input type="text" id="search" class="ml-2 mr-2" autofocus/>
                        <button id="reset" title="Suche zurücksetzen">✕</button>
                    </p>
                </div>
                <div class="row">
                    <div class="col-6 col-xs-6 col-sm-4 col-md-3 col-lg-2 col-xl-2">
                        <strong>Zeitstempel</strong>
                    </div>
                    <div class="col-6 col-xs-6 col-sm-8 col-md-9 col-lg-10 col-xl-10">
                        <div class="row">
                            <div class="col-6 col-xs-6 col-sm-4 col-md-3 col-lg-2 col-xl-2">
                                <strong>Quelle</strong>
                            </div>
                            <div class="col-6 col-xs-6 col-sm-8 col-md-9 col-lg-10 col-xl-10">
                                <strong>Zitat</strong>
                            </div>
                        </div>
                    </div>
                </div>
                <hr class="m-2"/>
                {% for quote in quotes %}
                    <div class="quote row">
                        <div class="quote-timestap col-6 col-xs-6 col-sm-4 col-md-3 col-lg-2 col-xl-2">
                            {{ quote.timestamp|date:'d-m-Y' }}
                        </div>
                        <div class="quote-author col-6 col-xs-6 col-sm-8 col-md-9 col-lg-10 col-xl-10">
                            {% for statement in quote.statements.all %}
                                <div class="row">
                                    <div class="col-6 col-xs-6 col-sm-4 col-md-3 col-lg-2 col-xl-2 quote-author">
                                        {{ statement.author.name }}
                                    </div>
                                    <div class="col-6 col-xs-6 col-sm-8 col-md-9 col-lg-10 col-xl-10 quote-statement">
                                        {{ statement.text }}
                                    </div>
                                </div>
                                {% if not forloop.last %}
                                    <hr class="m-1"/>
                                {% endif %}
                            {% endfor %}
                        </div>
                    </div>
                    <hr class="m-2"/>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}