{% extends 'base.jinja' %}
{% block headline %}
    <header class="">
        <h1 class="text-center mb-0" style="font-size: 20px">WIAI Zitate</h1>
        <p class="text-center mb-2">WIAI Original</p>
    </header>
{% endblock %}
{% block content %}
    <div class="container">
        <div class="row text-dark my-2">
            <div class="col-7 p-0">
                <div class="mr-1 bg-white p-3 h-100">
                    <h2>Neues Zitat hinzufügen</h2>
                    <form method="POST" action="{% url 'register_quote' %}">
                        {% csrf_token %}
                        <input class="mb-2 w-100" type="date" name="timestamp" value="{{ today_date|date:'Y-m-d' }}"
                               required
                               id="id_timestamp">

                        {{ statement_formset.management_form }}
                        {% for form in statement_formset %}
                            <div class="form-row ml-0 mt-1">
                                <div class="form-group form-inline">
                                    <select class="custom-select" name="form-0-author" id="id_form-0-author" required>
                                        <option value="" selected>---------</option>
                                        {% for author in authors %}
                                            <option value="{{ author.id }}">{{ author.name }}</option>
                                        {% endfor %}
                                    </select>
                                    <input class="form-control" type="text" name="form-0-text" maxlength="1024"
                                           id="id_form-0-text"
                                           required/>

                                    <input type="hidden" name="form-0-id" id="id_form-0-id"/>
                                    <button title="Weiteren Autor hinzufügen"
                                            class="btn btn-success add-form-row py-1 px-2 ml-1">+
                                    </button>
                                </div>
                            </div>
                        {% endfor %}
                        <br/>
                        <input class="btn btn-outline-primary btn-block" type="submit" value="Save"/>
                    </form>
                </div>
            </div>
            <div class="col-5 p-0">
                <div class="ml-1 bg-white p-3 h-100">
                    <h2>Neuen Autor hinzufügen</h2>
                    <form method="POST" action="{% url 'register_author' %}">
                        {% csrf_token %}
                        {{ authorform.as_p }}
                        <input class="btn btn-outline-primary btn-block align-items-end" type="submit" value="Save"/>
                    </form>
                </div>
            </div>
        </div>
        <div class="row text-dark mb-5">
            <div class="col-12 bg-white p-3">
                <h2>Zitate</h2>
                <p>Suche: <input type="text" id="search" autofocus/>
                    <button id="reset" title="Suche zurücksetzen">✕</button>
                </p>
                <div class="row">
                    <div class="col-6 col-xs-6 col-sm-4 col-md-3 col-lg-2 col-xl-2">
                        <strong>Zeitstempel</strong>
                    </div>
                    <div class="col-6 col-xs-6 col-sm-8 col-md-9 col-lg-10 col-xl-10">
                        <div class="row">
                            <div class="col-6 col-xs-6 col-sm-4 col-md-3 col-lg-2 col-xl-2">
                                <strong>Quelle</strong>
                            </div>
                            <div class="col-6 col-xs-6 col-sm-8 col-md-9 col-lg-10 col-xl-10">
                                <strong>Zitat</strong>
                            </div>
                        </div>
                    </div>
                </div>
                <hr class="m-2"/>
                {% for quote in quotes %}
                    <div class="quote row">
                        <div class="quote-timestap col-6 col-xs-6 col-sm-4 col-md-3 col-lg-2 col-xl-2">
                            {{ quote.timestamp|date:'d-m-Y' }}
                        </div>
                        <div class="quote-author col-6 col-xs-6 col-sm-8 col-md-9 col-lg-10 col-xl-10">
                            {% for statement in quote.statements.all %}
                                <div class="row">
                                    <div class="col-6 col-xs-6 col-sm-4 col-md-3 col-lg-2 col-xl-2 quote-author">
                                        {{ statement.author.name }}
                                    </div>
                                    <div class="col-6 col-xs-6 col-sm-8 col-md-9 col-lg-10 col-xl-10 quote-statement">
                                        {{ statement.text }}
                                    </div>
                                </div>
                                {% if not forloop.last %}
                                    <hr class="m-1"/>
                                {% endif %}
                            {% endfor %}
                        </div>
                    </div>
                    <hr class="m-2"/>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}