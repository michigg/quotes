{% extends 'base.jinja' %}
{% block content %}
    <div class="container">
        <div class="row text-dark mt-2 mt-sm-2 my-md-2">
            <div class="col-12 col-sm-12 col-md-9 col-xl-9 p-0">
                <div class="mr-0 mr-sm-0 mr-md-1 mb-4 bg-white p-3 h-100">
                    <h2 class="mb-3">Neues Zitat hinzufügen</h2>
                    <form id="quote-form" method="POST" action="{{ url('register_quote') }}">
                        {{ statement_formset.management_form }}
                        {% if user_groups|length > 1 %}
                            <select class="custom-select col-3" name="owner" required id="id_owner">
                                <option value="" selected>---------</option>
                                {% for group in user_groups %}
                                    <option value="{{ group.id }}">{{ group.name }}</option>
                                {% endfor %}
                            </select>
                        {% else %}
                            <select class="custom-select col-3" name="owner" required id="id_owner">
                                {% for group in user_groups %}
                                    <option value="{{ group.id }}">{{ group.name }}</option>
                                {% endfor %}
                            </select>
                        {% endif %}
                        {% for form in statement_formset %}
                            <div class="ml-0 mt-1 container conversation-particle">
                                <div class="form-group row mb-0">
                                    <select class="custom-select col-3 author-select-box" name="form-0-author"
                                            id="id_form-0-author"
                                            required>
                                        <option value="" selected>---------</option>
                                        {% for author in authors %}
                                            <option value="{{ author.id }}">{{ author.name }}</option>
                                        {% endfor %}
                                    </select>
                                    <input class="form-control col-8" type="text" name="form-0-text" maxlength="1024"
                                           id="id_form-0-text"
                                           required/>

                                    <input type="hidden" name="form-0-id" id="id_form-0-id" class=""/>
                                    <button title="Weiteren Autor hinzufügen"
                                            class="btn btn-success btn-block col-1 add-form-row">+
                                    </button>
                                </div>
                            </div>
                        {% endfor %}
                        <div class="container mt-1">
                            <div class="row">
                                <input class="col-12 col-sm-12 col-md-3" type="date" name="timestamp"
                                       value="{{ today_date.strftime('%Y-%m-%d') }}"
                                       required id="id_timestamp">
                                <input class="btn btn-outline-primary btn-block col-12 col-sm-12 col-md-9 mt-0" type="submit" value="Save"/>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-12 col-xs-12 col-sm-12 col-md-3 p-0 mt-1 mt-md-0">
                <div class="ml-0 ml-sm-0 ml-md-1 bg-white p-3 h-100">
                    <h2 class="mb-3">Neuen Autor hinzufügen</h2>
                    <form id="author-form" method="POST" action="{{ url('register_author') }} ">
                        <input type="text" name="name" maxlength="32" required="" id="id_name" class="col-12 mb-1">
                        <input class="btn btn-outline-primary btn-block align-items-end" type="submit" value="Save"/>
                    </form>
                </div>
            </div>
        </div>
        <div class="row text-dark mb-2 mt-1 mt-sm-1 mt-md-0">
            <div class="col-12 bg-white p-3">
                <div class="row mb-2">
                    <h2 class="col-8">Zitate</h2>
                    <div class="col-12 col-sm-12 col-md-4 mb-0 quote-search">
                        Suche: <input type="text" id="search" class="ml-2 mr-2" autofocus/>
                        <button id="reset" title="Suche zurücksetzen">✕</button>
                    </div>
                </div>
                <div class="row">
                    <div class="col-3 col-xs-3 col-sm-3 col-md-3 col-lg-2 col-xl-2">
                        <strong>Zeitstempel</strong>
                    </div>
                    <div class="col-9 col-xs-9 col-sm-9 col-md-9 col-lg-10 col-xl-10">
                        <div class="row">
                            <div class="col-3 col-xs-6 col-sm-4 col-md-3 col-lg-2 col-xl-2">
                                <strong>Quelle</strong>
                            </div>
                            <div class="col-9 col-xs-6 col-sm-8 col-md-9 col-lg-10 col-xl-10">
                                <strong>Zitat</strong>
                            </div>
                        </div>
                    </div>
                </div>
                <hr class="m-2"/>
                <div id="quotes-wrapper">
                    {# Handlebars.js code #}
                    {% raw %}
                        <script id="entry-template" type="text/x-handlebars-template">
                            <div class="quote row">
                                <div class="quote-timestap col-3 col-xs-3 col-sm-3 col-md-3 col-lg-2 col-xl-2">
                                    {{ timestamp }}
                                </div>
                                <div class="quote-author col-9 col-xs-9 col-sm-9 col-md-9 col-lg-10 col-xl-10">
                                    {{#each statements }}
                                    <div class="row">
                                        <div class="col-3 col-xs-6 col-sm-4 col-md-3 col-lg-2 col-xl-2 quote-author">
                                            {{ this.author.name }}
                                        </div>
                                        <div class="col-9 col-xs-6 col-sm-8 col-md-9 col-lg-10 col-xl-10 quote-statement">
                                            {{ this.text }}
                                        </div>
                                    </div>
                                    {{#if @last}}
                                    {{ else }}
                                    <hr class="m-1"/>
                                    {{/if}}
                                    {{/each}}
                                </div>
                            </div>
                            <hr class="m-2"/>
                        </script>
                    {% endraw %}
                </div>
            </div>
        </div>
        <!-- The Modal -->
        <div class="modal" id="successModal">
            <div class="modal-dialog modal-lg">
                <div class="modal-content" role="document">

                    <!-- Modal Header -->
                    <div class="modal-header text-dark">
                        <h4 class="modal-title text-dark">Krass!</h4>
                        <button type="button" class="close" data-dismiss="modal">&times;
                        </button>
                    </div>

                    <!-- Modal body -->
                    <div class="modal-body">
                        <h5 class="text-success">Success</h5>
                        <p class="text-dark">Das Formular wurde erfolgreich gespeichert!</p>
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-12">
                                    <video id="successGif" src="{{ static('images/success/dumbledore.mp4') }}" loop
                                           autoplay
                                           width="100%"></video>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal" id="failModal">
            <div class="modal-dialog modal-lg">
                <div class="modal-content" role="document">

                    <!-- Modal Header -->
                    <div class="modal-header text-dark">
                        <h4 class="modal-title text-dark">Fuck!</h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>

                    <!-- Modal body -->
                    <div class="modal-body">
                        <h5 class="text-danger">Error</h5>
                        <p class="text-dark">Sorry Dude!</p>
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-12">
                                    <video id="failGif" src="{{ static('/images/oops/oops.mp4') }}" loop autoplay
                                           width="100%"></video>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}