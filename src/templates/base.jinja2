{#{% load static %}#}
{# ===== HTML ===== #}
<!DOCTYPE html>
<html lang="en" dir="ltr">
{# ===== Head ===== #}
<head>
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Fachschaftszitate</title>
    <link rel="icon"
          type="image/png"
          href="{{ static('images/logo.png') }}">
    <meta name="author" content="Michael Götz"/>
    {% block js_extra %}{% endblock %}
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
          integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.css">
    <link rel="stylesheet" href="{{ static('home/form.css') }}">
    <link rel="stylesheet" href="{{ static('home/main.css') }}">
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/handlebars@latest/dist/handlebars.js"></script>
    <script src="{{ static('js/main.js') }}"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
            integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
            crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
            integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
            crossorigin="anonymous"></script>


    {% block css_extra %}{% endblock %}
</head>

{# ===== Body ===== #}
<body class="bg-light">
<nav class="navbar sticky-top navbar-light bg-light">
    <a class="navbar-brand" href="{{ url('home') }}">
        <img src="{{ static('images/logo.png') }}" width="30" height="30"
             class="d-inline-block align-top" alt="Zitate App Logo">
        {{ site_name }}
    </a>
    <div>
        <a class="pr-2" href="{{ url('admin:index') }}" ata-toggle="tooltip" data-placement="bottom"
           title="Gif Registration"><i class="fas fa-video"></i> Gifs</a>
        <a class="pr-2" href="{{ url('admin:index') }}" ata-toggle="tooltip" data-placement="bottom"
           title="Adminbereich"><i class="fas fa-crown"></i> Admin</a>
        <a href="{{ url('logout') }}" data-toggle="tooltip" data-placement="bottom" title="Logout"><i
                class="fas fa-sign-out-alt"></i> Logout</a>
    </div>
</nav>
<div class="container-fluid">
    {% block content %}{% endblock %}
</div>

<footer class="bg-dark text-white text-center">
    <span class="ml-2">© Copyright 2020, Michael Götz
        (<a href="#">Impressum</a>,
        <a href="#">Datenschutz</a>)</span>
    {#    TODO: Fix hidden on small devices#}
    <span class="float-right mr-2">Version: {{ version }}</span>
    </div>
</footer>

<script src="{{ static('js/form.js') }}"></script>
<script src="{{ static('js/trash.js') }}"></script>
</body>
</html>